// Simple Tick Tack Toe game

#include <iostream>
#include <string>
#include <iterator>
#include <cmath>

using namespace std;
char board[3][3] = {
    {'1', '2', '3'},
    {'4', '5', '6'},
    {'7', '8', '9'}
};

int RoundTurn=0;
int num=0;
bool Player=true;
bool gameWin= false;

void print_board(){
    for(int j=0; j<size(board);j++){
        for(int i =0; i<size(board[i]);i++ ){
        cout<<board[j][i];
        if(i<2)
            cout<<"|";
        }
        cout<<"\n";
        if(j<2)
            cout<<"------\n";
 
    }
    
}

int playerChoice(){
    int choice=0;
    //X Turn
    if (Player == true){
    cout<<"Player 1: X \nit is your turn please choose a spot to place:\n";
    }
    
    //O Turn
    else{
    cout<<"Player 2: O \nit is your turn please choose a spot to place:\n";
    }
    
    cin>>choice;
    while(choice<1 || choice>9 ){
        cout<<"Not an option, Please Try again!\n";
        cin>>choice;
    }
    Player = !Player;
    return choice;
}

void placingChoice(int &num){
    int compare;
        for(int j=0; j<size(board);j++){
            for(int i =0; i<size(board[i]);i++ ){
                //changing the data type from char to int to compare values
                compare = board[j][i]-'0';
                
                if((num)==compare){
                    if(!Player)
                    board[j][i]='X';
                    else
                    board[j][i]='O';
                
                }
            }
        }
        
                
    
}
int main(){
    
    while(!gameWin){
    print_board();
    num=playerChoice();
    placingChoice(num);
    }
    
}
